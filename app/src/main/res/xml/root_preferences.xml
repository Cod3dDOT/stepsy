<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="personal_data"
        android:title="@string/personal_data"
        app:iconSpaceReserved="false">

        <SeekBarPreference
            android:key="height_cm"
            android:title="@string/height_cm"
            app:min="120"
            android:max="220"
            app:defaultValue="180"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />

        <SeekBarPreference
            android:key="weight_kg"
            android:title="@string/weight_kg"
            app:min="30"
            android:max="220"
            app:defaultValue="70"
            app:showSeekBarValue="true"
            app:iconSpaceReserved="false" />
</PreferenceCategory>

    <PreferenceCategory
        android:title="@string/appearance"
        app:iconSpaceReserved="false">

        <ListPreference
            android:key="theme"
            android:title="@string/theme"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:key="unit_system"
            android:title="@string/unit_system"
            android:defaultValue="metric"
            android:entries="@array/unit_system_entries"
            android:entryValues="@array/unit_system_values"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:key="date_format"
            android:title="@string/date_format"
            android:summary="@string/date_format_summary"
            android:defaultValue="yyyy-MM-dd"
            android:entries="@array/date_format_options"
            android:entryValues="@array/date_format_values"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/data"
        app:iconSpaceReserved="false">

        <Preference
            android:key="import"
            android:title="@string/import_data"
        app:iconSpaceReserved="true" />

        <Preference
            android:key="export"
            android:title="@string/export_data"
        app:iconSpaceReserved="true" />
    </PreferenceCategory>
</PreferenceScreen>
